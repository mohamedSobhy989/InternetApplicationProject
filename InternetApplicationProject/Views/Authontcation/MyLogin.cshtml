
@*import modeles *@

@model InternetApplicationProject.Models.OurUsers

@{ 
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Login Page</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">
    <!-- VENDOR CSS -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/style.css" rel="stylesheet" />
    <link href="~/Content/main.css" rel="stylesheet" />
    <!-- ICONS -->
    <link rel="apple-touch-icon" sizes="76x76" href="~/Image/apple-icon.png">
    <link rel="icon" type="image/png" sizes="96x96" href="~/Image/favicon.png">
</head>
<body>
    <!-- WRAPPER -->
    <div id="wrapper">
        <div class="vertical-align-wrap">
            <div class="vertical-align-middle">
                <div class="auth-box " style="margin-top:110px;">
                    <div class="left">
                        <div class="content" style="margin-top : -470px;">
                            <div class="header">
                                <div class="logo text-center"><img src="~/Image/logo-dark.png" alt="Klorofil Logo"></div>
                                <p class="lead">Login to your account</p>
                            </div>
                            <!--<form class="form-auth-small" action="index.php">-->
                            @using (Html.BeginForm())
                            {
                                <div class="form-group">
                                    <label for="signin-email" class="control-label sr-only">Email</label>
                                    <!--<input type="email" class="form-control" id="signin-email" placeholder="Email">-->
                                    @Html.EditorFor(user => user.UserEmail, new { htmlAttributes = new { @class = "form-control", @placeholder = "Your E-mail" } })                 <!--this is the input tag-->
                                    @Html.ValidationMessageFor(user => user.UserEmail)    <!--this is used to check validation data anotation -->
                                </div>
                                <div class="form-group">
                                    <label for="signin-password" class="control-label sr-only">Password</label>
                                    <!--<input type="password" class="form-control" id="signin-password" placeholder="Password">-->
                                    @Html.EditorFor(user => user.UserPassword, new { htmlAttributes = new { @class = "form-control", @placeholder = "Your Password" } })                <!--this is the input tag-->
                                    @Html.ValidationMessageFor(user => user.UserPassword)     <!--this is used to check validation data anotation -->

                                </div>
                                <div class="form-group clearfix">
                                    <label class="fancy-checkbox element-left">
                                        <input type="checkbox">
                                        <span>Remember me</span>
                                    </label>
                                </div>
                                <button type="submit" class="btn btn-primary btn-lg btn-block">LOGIN</button>
                                <br />
                                <div class="bottom">
                                    <span class="helper-text"><i class="fa fa-lock"></i> <a href="#">Forgot password?</a></span>
                                </div>
                                <br />
                                <div class="bottom">
                                    <span class="helper-text"><i class="fa fa-lock"></i> @Html.ActionLink("Create New Account", "Registration","Customer") </span>
                                </div>
                            }
                        </div>
                    </div>
                    <div class="right">
                        <div class="overlay"></div>
                        <div class="content text">
                            <h1 class="heading">Welcome you can login From Here</h1>
                            <p>To Access Your Fetures </p>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
